{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "Module.json",
  "title": "Module schema",
  "type": "object",
  "allOf": [
    {
      "$ref": "#/$defs/Module"
    }
  ],
  "$defs": {
    "Module": {
      "type": "object",
      "patternProperties": {
        "^dependencies(@.+)?$": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "anyOf": [
              {
                "$ref": "#/$defs/CatalogDependency"
              },
              {
                "$ref": "#/$defs/ExternalMavenDependency"
              },
              {
                "$ref": "#/$defs/InternalDependency"
              }
            ]
          }
        },
        "^settings(@.+)?$": {
          "$ref": "#/$defs/Settings"
        },
        "^test-dependencies(@.+)?$": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "anyOf": [
              {
                "$ref": "#/$defs/CatalogDependency"
              },
              {
                "$ref": "#/$defs/ExternalMavenDependency"
              },
              {
                "$ref": "#/$defs/InternalDependency"
              }
            ]
          }
        },
        "^test-settings(@.+)?$": {
          "$ref": "#/$defs/Settings"
        }
      },
      "properties": {
        "aliases": {
          "type": "array",
          "items": {
            "patternProperties": {
              "^[^@+:]+$": {
                "type": "array",
                "minItems": 1,
                "uniqueItems": true,
                "items": {
                  "type": "string"
                }
              }
            }
          }
        },
        "apply": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string"
          }
        },
        "module": {
          "$ref": "#/$defs/Meta"
        },
        "product": {
          "$ref": "#/$defs/ModuleProduct"
        },
        "repositories": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "$ref": "#/$defs/Repository"
          }
        }
      }
    },
    "Meta": {
      "type": "object",
      "properties": {
        "layout": {
          "enum": ["gradle-kmp","gradle-jvm","default"]
        }
      }
    },
    "ModuleProduct": {
      "type": "object",
      "properties": {
        "platforms": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "enum": ["common","js","jvm","wasm","android","native","linux","linuxX64","linuxArm64","apple","tvos","tvosArm64","tvosX64","tvosSimulatorArm64","macos","macosX64","macosArm64","ios","iosArm64","iosSimulatorArm64","iosX64","watchos","watchosArm64","watchosArm32","watchosDeviceArm64","watchosSimulatorArm64","mingw","mingwX64","androidNative","androidNativeArm32","androidNativeArm64","androidNativeX64","androidNativeX86"]
          }
        },
        "type": {
          "enum": ["lib","app","jvm/app","android/app","ios/app","macos/app","linux/app"]
        }
      }
    },
    "CatalogDependency": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "object",
          "patternProperties": {
            "^.*$": {
              "anyOf": [
                {
                  "enum": [
                    "exported",
                    "compile-only",
                    "runtime-only"
                  ]
                },
                {
                  "type": "object",
                  "properties": {
                    "scope": {
                      "enum": [
                        "all",
                        "compile-only",
                        "runtime-only"
                      ]
                    },
                    "exported": {
                      "type": "boolean"
                    }
                  }
                }
              ]
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "ExternalMavenDependency": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "object",
          "patternProperties": {
            "^.*$": {
              "anyOf": [
                {
                  "enum": [
                    "exported",
                    "compile-only",
                    "runtime-only"
                  ]
                },
                {
                  "type": "object",
                  "properties": {
                    "scope": {
                      "enum": [
                        "all",
                        "compile-only",
                        "runtime-only"
                      ]
                    },
                    "exported": {
                      "type": "boolean"
                    }
                  }
                }
              ]
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "InternalDependency": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "object",
          "patternProperties": {
            "^.*$": {
              "anyOf": [
                {
                  "enum": [
                    "exported",
                    "compile-only",
                    "runtime-only"
                  ]
                },
                {
                  "type": "object",
                  "properties": {
                    "scope": {
                      "enum": [
                        "all",
                        "compile-only",
                        "runtime-only"
                      ]
                    },
                    "exported": {
                      "type": "boolean"
                    }
                  }
                }
              ]
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "Repository": {
      "type": "object",
      "properties": {
        "credentials": {
          "$ref": "#/$defs/Credentials"
        },
        "id": {
          "type": "string"
        },
        "publish": {
          "type": "boolean"
        },
        "url": {
          "type": "string"
        }
      }
    },
    "Credentials": {
      "type": "object",
      "properties": {
        "file": {
          "type": "string"
        },
        "passwordKey": {
          "type": "string"
        },
        "usernameKey": {
          "type": "string"
        }
      }
    },
    "Settings": {
      "type": "object",
      "properties": {
        "android": {
          "$ref": "#/$defs/AndroidSettings"
        },
        "compose": {
          "$ref": "#/$defs/ComposeSettings"
        },
        "ios": {
          "$ref": "#/$defs/IosSettings"
        },
        "java": {
          "$ref": "#/$defs/JavaSettings"
        },
        "junit": {
          "enum": ["junit-4","junit-5","none"]
        },
        "jvm": {
          "$ref": "#/$defs/JvmSettings"
        },
        "kotlin": {
          "$ref": "#/$defs/KotlinSettings"
        },
        "kover": {
          "$ref": "#/$defs/KoverSettings"
        },
        "native": {
          "$ref": "#/$defs/NativeSettings"
        },
        "publishing": {
          "$ref": "#/$defs/PublishingSettings"
        }
      }
    },
    "AndroidSettings": {
      "type": "object",
      "properties": {
        "applicationId": {
          "type": "string"
        },
        "compileSdk": {
          "enum": ["26","27","28","29","30","31","32","33","34"]
        },
        "maxSdk": {
          "enum": ["26","27","28","29","30","31","32","33","34"]
        },
        "minSdk": {
          "enum": ["26","27","28","29","30","31","32","33","34"]
        },
        "namespace": {
          "type": "string"
        },
        "targetSdk": {
          "enum": ["26","27","28","29","30","31","32","33","34"]
        }
      }
    },
    "ComposeSettings": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        }
      }
    },
    "IosSettings": {
      "type": "object",
      "properties": {
        "framework": {
          "$ref": "#/$defs/IosFrameworkSettings"
        },
        "teamId": {
          "type": "string"
        }
      }
    },
    "IosFrameworkSettings": {
      "type": "object",
      "properties": {
        "basename": {
          "type": "string"
        },
        "isStatic": {
          "type": "boolean"
        }
      }
    },
    "JavaSettings": {
      "type": "object",
      "properties": {
        "source": {
          "enum": ["1.8","11","17","21","22","23","24","25"]
        }
      }
    },
    "JvmSettings": {
      "type": "object",
      "properties": {
        "mainClass": {
          "type": "string"
        },
        "target": {
          "enum": ["1.8","11","17","21","22","23","24","25"]
        }
      }
    },
    "KotlinSettings": {
      "type": "object",
      "properties": {
        "allWarningsAsErrors": {
          "type": "boolean"
        },
        "apiVersion": {
          "enum": ["2.0","1.9","1.8","1.7","1.6","1.5","1.4","1.3","1.2","1.1","1.0"]
        },
        "debug": {
          "type": "boolean"
        },
        "freeCompilerArgs": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string"
          }
        },
        "languageFeatures": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string"
          }
        },
        "languageVersion": {
          "enum": ["2.0","1.9","1.8","1.7","1.6","1.5","1.4","1.3","1.2","1.1","1.0"]
        },
        "linkerOpts": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string"
          }
        },
        "optIns": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string"
          }
        },
        "progressiveMode": {
          "type": "boolean"
        },
        "serialization": {
          "$ref": "#/$defs/SerializationSettings"
        },
        "suppressWarnings": {
          "type": "boolean"
        },
        "verbose": {
          "type": "boolean"
        }
      }
    },
    "SerializationSettings": {
      "type": "object",
      "properties": {
        "engine": {
          "type": "string"
        }
      }
    },
    "KoverSettings": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "html": {
          "$ref": "#/$defs/KoverHtmlSettings"
        },
        "xml": {
          "$ref": "#/$defs/KoverXmlSettings"
        }
      }
    },
    "KoverHtmlSettings": {
      "type": "object",
      "properties": {
        "charset": {
          "type": "string"
        },
        "onCheck": {
          "type": "boolean"
        },
        "reportDir": {
          "type": "string"
        },
        "title": {
          "type": "string"
        }
      }
    },
    "KoverXmlSettings": {
      "type": "object",
      "properties": {
        "onCheck": {
          "type": "boolean"
        },
        "reportFile": {
          "type": "string"
        }
      }
    },
    "NativeSettings": {
      "type": "object",
      "properties": {
        "entryPoint": {
          "type": "string"
        }
      }
    },
    "PublishingSettings": {
      "type": "object",
      "properties": {
        "group": {
          "type": "string"
        },
        "version": {
          "type": "string"
        }
      }
    }
  }
}