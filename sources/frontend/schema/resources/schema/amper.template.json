{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "Template.json",
  "title": "Template schema",
  "type": "object",
  "allOf": [
    {
      "$ref": "#/$defs/Template"
    }
  ],
  "$defs": {
    "Template": {
      "type": "object",
      "patternProperties": {
        "^dependencies(@.+)?$": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "anyOf": [
              {
                "$ref": "#/$defs/CatalogDependency"
              },
              {
                "$ref": "#/$defs/ExternalMavenDependency"
              },
              {
                "$ref": "#/$defs/InternalDependency"
              }
            ]
          }
        },
        "^settings(@.+)?$": {
          "$ref": "#/$defs/Settings"
        },
        "^test-dependencies(@.+)?$": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "anyOf": [
              {
                "$ref": "#/$defs/CatalogDependency"
              },
              {
                "$ref": "#/$defs/ExternalMavenDependency"
              },
              {
                "$ref": "#/$defs/InternalDependency"
              }
            ]
          }
        },
        "^test-settings(@.+)?$": {
          "$ref": "#/$defs/Settings"
        }
      },
      "properties": {
        "repositories": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "$ref": "#/$defs/Repository"
          }
        }
      },
      "additionalProperties": false
    },
    "CatalogDependency": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "object",
          "patternProperties": {
            "^.*$": {
              "anyOf": [
                {
                  "enum": [
                    "exported",
                    "compile-only",
                    "runtime-only"
                  ]
                },
                {
                  "type": "object",
                  "properties": {
                    "scope": {
                      "enum": [
                        "all",
                        "compile-only",
                        "runtime-only"
                      ]
                    },
                    "exported": {
                      "type": "boolean"
                    }
                  }
                }
              ]
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "ExternalMavenDependency": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "object",
          "patternProperties": {
            "^.*$": {
              "anyOf": [
                {
                  "enum": [
                    "exported",
                    "compile-only",
                    "runtime-only"
                  ]
                },
                {
                  "type": "object",
                  "properties": {
                    "scope": {
                      "enum": [
                        "all",
                        "compile-only",
                        "runtime-only"
                      ]
                    },
                    "exported": {
                      "type": "boolean"
                    }
                  }
                }
              ]
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "InternalDependency": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "object",
          "patternProperties": {
            "^.*$": {
              "anyOf": [
                {
                  "enum": [
                    "exported",
                    "compile-only",
                    "runtime-only"
                  ]
                },
                {
                  "type": "object",
                  "properties": {
                    "scope": {
                      "enum": [
                        "all",
                        "compile-only",
                        "runtime-only"
                      ]
                    },
                    "exported": {
                      "type": "boolean"
                    }
                  }
                }
              ]
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "Repository": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "credentials": {
              "$ref": "#/$defs/Credentials"
            },
            "id": {
              "type": "string"
            },
            "publish": {
              "type": "boolean"
            },
            "url": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        {
          "type": "string"
        }
      ]
    },
    "Credentials": {
      "type": "object",
      "properties": {
        "file": {
          "type": "string"
        },
        "passwordKey": {
          "type": "string"
        },
        "usernameKey": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "Settings": {
      "type": "object",
      "properties": {
        "android": {
          "$ref": "#/$defs/AndroidSettings"
        },
        "compose": {
          "$ref": "#/$defs/ComposeSettings"
        },
        "ios": {
          "$ref": "#/$defs/IosSettings"
        },
        "java": {
          "$ref": "#/$defs/JavaSettings"
        },
        "junit": {
          "enum": ["junit-4","junit-5","none"]
        },
        "jvm": {
          "$ref": "#/$defs/JvmSettings"
        },
        "kotlin": {
          "$ref": "#/$defs/KotlinSettings"
        },
        "kover": {
          "$ref": "#/$defs/KoverSettings"
        },
        "native": {
          "$ref": "#/$defs/NativeSettings"
        },
        "publishing": {
          "$ref": "#/$defs/PublishingSettings"
        }
      },
      "additionalProperties": false
    },
    "AndroidSettings": {
      "type": "object",
      "properties": {
        "applicationId": {
          "type": "string"
        },
        "compileSdk": {
          "enum": ["26","27","28","29","30","31","32","33","34"]
        },
        "maxSdk": {
          "enum": ["26","27","28","29","30","31","32","33","34"]
        },
        "minSdk": {
          "enum": ["26","27","28","29","30","31","32","33","34"]
        },
        "namespace": {
          "type": "string"
        },
        "targetSdk": {
          "enum": ["26","27","28","29","30","31","32","33","34"]
        }
      },
      "additionalProperties": false
    },
    "ComposeSettings": {
      "anyOf": [
        {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            }
          },
          "additionalProperties": false
        },
        {
          "enum": [
            "enabled"
          ]
        }
      ]
    },
    "IosSettings": {
      "type": "object",
      "properties": {
        "framework": {
          "$ref": "#/$defs/IosFrameworkSettings"
        },
        "teamId": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "IosFrameworkSettings": {
      "type": "object",
      "properties": {
        "basename": {
          "type": "string"
        },
        "isStatic": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "JavaSettings": {
      "type": "object",
      "properties": {
        "source": {
          "enum": ["1.8","11","17","21","22","23","24","25"]
        }
      },
      "additionalProperties": false
    },
    "JvmSettings": {
      "type": "object",
      "properties": {
        "mainClass": {
          "type": "string"
        },
        "target": {
          "enum": ["1.8","11","17","21","22","23","24","25"]
        }
      },
      "additionalProperties": false
    },
    "KotlinSettings": {
      "type": "object",
      "properties": {
        "allWarningsAsErrors": {
          "type": "boolean"
        },
        "apiVersion": {
          "enum": ["2.0","1.9","1.8","1.7","1.6","1.5","1.4","1.3","1.2","1.1","1.0"]
        },
        "debug": {
          "type": "boolean"
        },
        "freeCompilerArgs": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string"
          }
        },
        "languageFeatures": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string"
          }
        },
        "languageVersion": {
          "enum": ["2.0","1.9","1.8","1.7","1.6","1.5","1.4","1.3","1.2","1.1","1.0"]
        },
        "linkerOpts": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string"
          }
        },
        "optIns": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string"
          }
        },
        "progressiveMode": {
          "type": "boolean"
        },
        "serialization": {
          "$ref": "#/$defs/SerializationSettings"
        },
        "suppressWarnings": {
          "type": "boolean"
        },
        "verbose": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "SerializationSettings": {
      "anyOf": [
        {
          "type": "object",
          "properties": {
            "format": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        {
          "enum": [
            "json",
            "none"
          ]
        }
      ]
    },
    "KoverSettings": {
      "anyOf": [
        {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "html": {
              "$ref": "#/$defs/KoverHtmlSettings"
            },
            "xml": {
              "$ref": "#/$defs/KoverXmlSettings"
            }
          },
          "additionalProperties": false
        },
        {
          "enum": [
            "enabled"
          ]
        }
      ]
    },
    "KoverHtmlSettings": {
      "type": "object",
      "properties": {
        "charset": {
          "type": "string"
        },
        "onCheck": {
          "type": "boolean"
        },
        "reportDir": {
          "type": "string"
        },
        "title": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "KoverXmlSettings": {
      "type": "object",
      "properties": {
        "onCheck": {
          "type": "boolean"
        },
        "reportFile": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "NativeSettings": {
      "type": "object",
      "properties": {
        "entryPoint": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "PublishingSettings": {
      "type": "object",
      "properties": {
        "group": {
          "type": "string"
        },
        "version": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  }
}